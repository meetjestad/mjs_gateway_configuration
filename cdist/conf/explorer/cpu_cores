# FIXME: other system types (not linux ...)

os=$("$__explorer/os")
case "$os" in
    "macosx")
        sysctl -n hw.physicalcpu
    ;;

    "openbsd")
        sysctl -n hw.ncpuonline
    ;;

    "freebsd"|"netbsd")
        PATH=$(getconf PATH)
        sysctl -n hw.ncpu
    ;;

    *)
        if [ -r /proc/cpuinfo ]; then
            cores="$(grep "core id" /proc/cpuinfo | sort | uniq | wc -l)"
            if [ "${cores}" -eq 0 ]; then
                cores="1"
            fi
            echo "$cores"
        fi
    ;;
esac
